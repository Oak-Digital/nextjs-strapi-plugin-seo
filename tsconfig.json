{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "types": ["vite/client"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
